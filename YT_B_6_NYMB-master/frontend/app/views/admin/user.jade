form#search-form.mb-3
  .form-group
    label(for='field') Field
    select#field.form-control(name='field')
      option(value='id') ID
      option(value='username') Username
      option(value='email') Email
      option(value='firstName') First name
      option(value='lastName') Last name
  .form-group
    label(for='filter') Filter
    input#filter.form-control(type='text' name='filter')
  .form-group
    button.btn.btn-primary(type='submit') Search
    button#form-cancel.btn.btn-warning.float-right Cancel

.table-responsive
  table.table.table-striped.table-boardered.table-hover
    thead
      tr
        th ID
        th Username
        th Email
        th Firstname
        th Lastname
        th Role
        th Options
    tbody
      tr
        td.text-center(colspan=7) No results ...
